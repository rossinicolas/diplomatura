<div class="container" style="margin:100px auto">
  <div class="row">
    <div class="col-6 offset-3">
      <h4>Agregar una nueva novedad</h4>
      <form
        action="/admin/novedades/agregar"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            placeholder="TÃ­tulo"
            name="titulo"
          />
        </div>
        <div class="form-group">
